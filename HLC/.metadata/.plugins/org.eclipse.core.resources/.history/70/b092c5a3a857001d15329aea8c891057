package mainApp;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.security.KeyStore;
import java.security.KeyStoreException;

public class CifraRSAApp {

	public static void main(String[] args) {
		// args[0] = Mensaje a crifrar
		// args[1] = Clave publica del keystore: claves(keystore) => miclave(key)
		// args[2] = Passwd del keystore

		/*
		 * El mensaje se cifra usando la clave publica de "miclave" y se escupe por
		 * pantalla. Se pasa a Base64 por si hay caracteres no legibles.
		 */

		KeyStore kstore;
		FileInputStream fis;

		try {
			kstore = KeyStore.getInstance(KeyStore.getDefaultType());
		} catch (KeyStoreException e) {
			System.out.println("No existe la instancia del KeyStore");
			e.printStackTrace();
		}
		
		try {
			fis = new FileInputStream(new File("src/main/resources/Keys/claves"));
		} catch (FileNotFoundException e) {
			System.out.println("Archivo no encontrado en \"src/main/resources/Keys\"");
			e.printStackTrace();
		}
		
		kstore.load(fis, args[2].toCharArray());

		
	}

}
