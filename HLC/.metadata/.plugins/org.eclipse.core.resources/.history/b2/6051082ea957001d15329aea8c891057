package mainApp;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.IOException;
import java.security.KeyStore;
import java.security.KeyStoreException;
import java.security.NoSuchAlgorithmException;
import java.security.PrivateKey;
import java.security.cert.CertificateException;

public class CifraRSAApp {

	public static void main(String[] args) {
		// args[0] = Mensaje a crifrar
		// args[1] = KeyStore: claves 
		// args[2] = Key: miclave
		// args[3] = Passwd del keystore

		/*
		 * El mensaje se cifra usando la clave publica de "miclave" y se escupe por
		 * pantalla. Se pasa a Base64 por si hay caracteres no legibles.
		 */

		KeyStore kstore = null;
		FileInputStream fis = null;

		try {
			kstore = KeyStore.getInstance(KeyStore.getDefaultType());
		} catch (KeyStoreException e) {
			System.out.println("No existe la instancia del KeyStore");
			e.printStackTrace();
		}
		
		try {
			fis = new FileInputStream(new File(args[1]));
		} catch (FileNotFoundException e) {
			System.out.println("Archivo no encontrado en \"src/main/resources/Keys\"");
			e.printStackTrace();
		}
		
		try {
			kstore.load(fis, args[2].toCharArray());
		} catch (NoSuchAlgorithmException | CertificateException | IOException e) {
			System.out.println("Error al cargar el archivo keystore");
			e.printStackTrace();
		}

		PrivateKey clavePrivada = null;
		
		clavePrivada = kstore.getKey(null, null)
	}

}
